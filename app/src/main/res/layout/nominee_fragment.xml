<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.view.dashboard.fragments.customerCreate.general.GeneralFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/space_5x"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_view_first_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/first_name"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toStartOf="@+id/txt_view_last_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_view_last_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/last_name"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_first_name"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/ed_txt_first_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_48x"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_border"
                android:ems="10"
                android:fontFamily="@font/oxygen_regular"
                android:hint="@string/type_here"
                android:inputType="textPersonName"
                android:padding="@dimen/space_8x"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toStartOf="@id/ed_txt_last_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_view_first_name" />

            <EditText
                android:id="@+id/ed_txt_last_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_48x"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input_border"
                android:ems="10"
                android:fontFamily="@font/oxygen_regular"
                android:hint="@string/type_here"
                android:inputType="textPersonName"
                android:padding="@dimen/space_8x"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ed_txt_first_name"
                app:layout_constraintTop_toBottomOf="@id/txt_view_first_name" />

            <TextView
                android:id="@+id/txt_view_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/date_of_birth"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toStartOf="@+id/txt_view_nid"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_txt_first_name" />

            <TextView
                android:id="@+id/txt_view_nid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/nid"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_dob"
                app:layout_constraintTop_toBottomOf="@id/ed_txt_last_name" />

            <TextView
                android:id="@+id/txt_view_dob_value"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_48x"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_border"
                android:fontFamily="@font/oxygen_regular"
                android:padding="@dimen/space_8x"
                android:textSize="@dimen/font_16x"
                app:drawableEndCompat="@drawable/ic_dob"
                app:layout_constraintEnd_toStartOf="@id/ed_txt_nid"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_view_dob" />

            <EditText
                android:id="@+id/ed_txt_nid"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_48x"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input_border"
                android:ems="10"
                android:fontFamily="@font/oxygen_regular"
                android:hint="@string/type_here"
                android:inputType="textPersonName"
                android:padding="@dimen/space_8x"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_dob_value"
                app:layout_constraintTop_toBottomOf="@id/txt_view_nid" />

            <TextView
                android:id="@+id/txt_view_mobile_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/mobile_number"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toStartOf="@+id/txt_view_father_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_view_dob_value" />

            <TextView
                android:id="@+id/txt_view_father_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/father_name"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_mobile_no"
                app:layout_constraintTop_toBottomOf="@id/ed_txt_nid" />

            <EditText
                android:id="@+id/ed_txt_mobile_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_48x"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_border"
                android:ems="10"
                android:fontFamily="@font/oxygen_regular"
                android:hint="@string/type_here"
                android:inputType="phone"
                android:padding="@dimen/space_8x"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toStartOf="@id/ed_txt_father_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_view_mobile_no" />

            <EditText
                android:id="@+id/ed_txt_father_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_48x"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/input_border"
                android:ems="10"
                android:fontFamily="@font/oxygen_regular"
                android:hint="@string/type_here"
                android:inputType="textPersonName"
                android:padding="@dimen/space_8x"
                android:textSize="@dimen/font_16x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ed_txt_mobile_number"
                app:layout_constraintTop_toBottomOf="@id/txt_view_father_name" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_border"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/oxygen_regular"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/font_20x"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/oxygen_regular"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="@dimen/font_20x"
                app:icon="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_next" />

            <Button
                android:id="@+id/btn_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/oxygen_regular"
                android:text="@string/preview"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/font_16x"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>