<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_5x">

    <TextView
        android:id="@+id/txt_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_5x"
        android:fontFamily="@font/oxygen_regular"
        android:text="@string/type_here"
        android:textAllCaps="true"
        android:textColor="@color/customer_text"
        android:textSize="@dimen/font_12x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ed_txt_daily_transaction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/ed_txt_daily_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_5x"
        android:background="@drawable/input_border"
        android:fontFamily="@font/oxygen_regular"
        android:inputType="number"
        android:maxLength="@integer/int_input_length"
        android:padding="@dimen/space_5x"
        android:text="@string/type_here"
        android:textColor="@color/customer_text"
        android:textSize="@dimen/font_12x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ed_txt_daily_amount"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_view_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_txt_daily_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_5x"
        android:background="@drawable/input_border"
        android:fontFamily="@font/oxygen_regular"
        android:inputType="number"
        android:maxLength="@integer/int_input_length"
        android:padding="@dimen/space_5x"
        android:text="@string/type_here"
        android:textColor="@color/customer_text"
        android:textSize="@dimen/font_12x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ed_txt_monthly_transaction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ed_txt_daily_transaction"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_txt_monthly_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_5x"
        android:background="@drawable/input_border"
        android:fontFamily="@font/oxygen_regular"
        android:inputType="number"
        android:maxLength="@integer/int_input_length"
        android:padding="@dimen/space_5x"
        android:text="@string/type_here"
        android:textColor="@color/customer_text"
        android:textSize="@dimen/font_12x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ed_txt_monthly_amount"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ed_txt_daily_amount"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_txt_monthly_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_5x"
        android:background="@drawable/input_border"
        android:fontFamily="@font/oxygen_regular"
        android:inputType="number"
        android:maxLength="@integer/int_input_length"
        android:padding="@dimen/space_5x"
        android:text="@string/type_here"
        android:textColor="@color/customer_text"
        android:textSize="@dimen/font_12x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ed_txt_transaction_amount"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ed_txt_monthly_transaction"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_txt_transaction_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_border"
        android:fontFamily="@font/oxygen_regular"
        android:inputType="number"
        android:maxLength="@integer/int_input_length"
        android:padding="@dimen/space_5x"
        android:text="@string/type_here"
        android:textColor="@color/customer_text"
        android:textSize="@dimen/font_12x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ed_txt_monthly_amount"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>