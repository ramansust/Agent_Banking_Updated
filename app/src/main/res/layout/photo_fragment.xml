<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/space_5x">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_view_minor_attain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/oxygen_bold"
            android:text="@string/minor_attains_info"
            android:textSize="@dimen/font_16x"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/photo_card_bg"
            android:elevation="@dimen/space_5x"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_middle"
            app:layout_constraintEnd_toStartOf="@id/card_view_signature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_minor_attain"
            app:layout_constraintVertical_bias="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8x">

                <TextView
                    android:id="@+id/txt_view_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/please_attach_your_photograph"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_view_photo_hide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/nid_front"
                    android:textSize="@dimen/font_12x"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/txt_view_photo"
                    app:layout_constraintStart_toStartOf="@+id/txt_view_photo"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_photo" />

                <ImageView
                    android:id="@+id/img_view_photo"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_photo_hide" />

                <Button
                    android:id="@+id/btn_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_photo" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_signature"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/photo_card_bg"
            android:elevation="@dimen/space_5x"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_middle"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle"
            app:layout_constraintStart_toEndOf="@id/card_view_photo"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_minor_attain"
            app:layout_constraintVertical_bias="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8x">

                <TextView
                    android:id="@+id/txt_view_signature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/please_attach_your_signature"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_view_signature_hide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/front_image"
                    android:textSize="@dimen/font_12x"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/txt_view_signature"
                    app:layout_constraintStart_toStartOf="@+id/txt_view_signature"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_signature" />

                <ImageView
                    android:id="@+id/img_view_signature"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_signature_hide" />

                <Button
                    android:id="@+id/btn_take_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_signature" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_documents"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="@dimen/space_5x"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_middle"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_minor_attain">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8x">

                <TextView
                    android:id="@+id/txt_view_nid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/please_attach_your_nid"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_view_nid_front"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/front_image"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_nid_front"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/img_view_nid_front"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_nid" />

                <TextView
                    android:id="@+id/txt_view_nid_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/back_image"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_nid_back"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/img_view_nid_back"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_nid" />

                <ImageView
                    android:id="@+id/img_view_nid_front"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toStartOf="@id/img_view_nid_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_nid_front" />

                <Button
                    android:id="@+id/btn_take_nid_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_nid_front"
                    app:layout_constraintStart_toStartOf="@+id/img_view_nid_front"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_nid_front" />

                <ImageView
                    android:id="@+id/img_view_nid_back"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_view_nid_front"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_nid_back" />

                <Button
                    android:id="@+id/btn_take_nid_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_nid_back"
                    app:layout_constraintStart_toStartOf="@+id/img_view_nid_back"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_nid_back" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_view_guardian_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/space_16x"
            android:fontFamily="@font/oxygen_bold"
            android:gravity="center|start"
            android:text="@string/guardian_information"
            android:textSize="@dimen/font_16x"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_guardian_document_type"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_middle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_middle" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_guardian_document_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_48x"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/space_16x"
            android:background="@drawable/spinner_background"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical_middle"
            app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_middle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_guardian_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/photo_card_bg"
            android:elevation="@dimen/space_5x"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            app:layout_constraintEnd_toStartOf="@id/card_view_guardian_signature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_guardian_info"
            app:layout_constraintVertical_bias="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8x">

                <TextView
                    android:id="@+id/txt_view_guardian_photo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/please_attach_your_photograph"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_view_guardian_photo_hide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/nid_front"
                    android:textSize="@dimen/font_12x"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/txt_view_guardian_photo"
                    app:layout_constraintStart_toStartOf="@+id/txt_view_guardian_photo"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_guardian_photo" />

                <ImageView
                    android:id="@+id/img_view_guardian_photo"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_guardian_photo_hide" />

                <Button
                    android:id="@+id/btn_take_guardian_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_guardian_photo" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_guardian_signature"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/photo_card_bg"
            android:elevation="@dimen/space_5x"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical_middle"
            app:layout_constraintStart_toEndOf="@id/card_view_guardian_photo"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_guardian_info"
            app:layout_constraintVertical_bias="0.5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8x">

                <TextView
                    android:id="@+id/txt_view_guardian_signature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/please_attach_your_signature"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_view_guardian_signature_hide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/nid_front"
                    android:textSize="@dimen/font_12x"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="@+id/txt_view_guardian_signature"
                    app:layout_constraintStart_toStartOf="@+id/txt_view_guardian_signature"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_guardian_signature" />

                <ImageView
                    android:id="@+id/img_view_guardian_signature"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_guardian_signature_hide" />

                <Button
                    android:id="@+id/btn_take_guardian_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_guardian_signature" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_guardian_documents"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="@dimen/space_5x"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_middle"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_guardian_info">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_8x">

                <TextView
                    android:id="@+id/txt_view_guardian_nid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/please_attach_your_nid"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_view_guardian_nid_front"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8x"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/front_image"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_guardian_nid_front"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/img_view_guardian_nid_front"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_guardian_nid" />

                <TextView
                    android:id="@+id/txt_view_guardian_nid_back"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8x"
                    android:fontFamily="@font/oxygen_regular"
                    android:gravity="center"
                    android:text="@string/back_image"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_guardian_nid_back"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="@+id/img_view_guardian_nid_back"
                    app:layout_constraintTop_toBottomOf="@id/txt_view_guardian_nid" />

                <ImageView
                    android:id="@+id/img_view_guardian_nid_front"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toStartOf="@id/img_view_guardian_nid_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_guardian_nid_front" />

                <Button
                    android:id="@+id/btn_take_guardian_nid_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_guardian_nid_front"
                    app:layout_constraintStart_toStartOf="@+id/img_view_guardian_nid_front"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_guardian_nid_front" />

                <ImageView
                    android:id="@+id/img_view_guardian_nid_back"
                    android:layout_width="@dimen/space_110x"
                    android:layout_height="@dimen/space_110x"
                    android:layout_marginTop="@dimen/space_16x"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_photo_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_view_guardian_nid_front"
                    app:layout_constraintTop_toBottomOf="@+id/txt_view_guardian_nid_back" />

                <Button
                    android:id="@+id/btn_take_guardian_nid_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_regular"
                    android:text="@string/attach"
                    android:textSize="@dimen/font_12x"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/img_view_guardian_nid_back"
                    app:layout_constraintStart_toStartOf="@+id/img_view_guardian_nid_back"
                    app:layout_constraintTop_toBottomOf="@+id/img_view_guardian_nid_back" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_16x"
            android:layout_marginBottom="@dimen/space_16x"
            android:background="@drawable/button_border"
            android:fontFamily="@font/oxygen_regular"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20x"
            app:icon="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_next" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_16x"
            android:layout_marginBottom="@dimen/space_16x"
            android:background="@drawable/button_border"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:enabled="false"
            android:fontFamily="@font/oxygen_regular"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20x"
