<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_5x">

    <TextView
        android:id="@+id/txt_view_transaction_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8x"
        android:fontFamily="@font/oxygen_regular"
        android:text="@string/transaction_type"
        android:textAllCaps="true"
        android:textSize="@dimen/font_12x"
        app:layout_constraintEnd_toStartOf="@+id/txt_view_monthly_transaction"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_view_monthly_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8x"
        android:layout_marginTop="@dimen/space_8x"
        android:layout_marginEnd="@dimen/space_8x"
        android:fontFamily="@font/oxygen_regular"
        android:text="@string/monthly_transaction"
        android:textSize="@dimen/font_12x"
        app:layout_constraintEnd_toStartOf="@+id/txt_view_max_transaction_amount"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_view_transaction_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_view_max_transaction_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8x"
        android:fontFamily="@font/oxygen_regular"
        android:text="@string/transaction_amount"
        android:textSize="@dimen/font_12x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_view_monthly_transaction"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>