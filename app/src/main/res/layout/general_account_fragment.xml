<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.view.dashboard.fragments.accountOpening.general.GeneralFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/space_5x">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_16x">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_8x"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_view_product_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/product_category_"
                    android:textSize="@dimen/font_16x" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_product_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/spinner_background" />

                <TextView
                    android:id="@+id/txt_view_operating_instruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16x"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/operating_instruction_"
                    android:textSize="@dimen/font_16x" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_operating_instruction"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/spinner_background" />

                <TextView
                    android:id="@+id/txt_view_account_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16x"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/title_account_"
                    android:textSize="@dimen/font_16x" />

                <EditText
                    android:id="@+id/ed_txt_account_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/input_border"
                    android:fontFamily="@font/oxygen_regular"
                    android:hint="@string/type_here"
                    android:inputType="textPersonName|textCapSentences"
                    android:maxLength="@integer/edit_text_input_length"
                    android:padding="@dimen/space_8x"
                    android:textSize="@dimen/font_16x" />

                <TextView
                    android:id="@+id/txt_view_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16x"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/currency_"
                    android:textSize="@dimen/font_16x" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_currency"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/spinner_background" />

                <TextView
                    android:id="@+id/txt_view_initial_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16x"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/initial_amount"
                    android:textSize="@dimen/font_16x" />

                <EditText
                    android:id="@+id/ed_txt_initial_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/input_border"
                    android:fontFamily="@font/oxygen_regular"
                    android:hint="@string/type_here"
                    android:inputType="number"
                    android:maxLength="@integer/int_input_length"
                    android:padding="@dimen/space_8x"
                    android:textSize="@dimen/font_16x" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8x"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline_middle"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txt_view_type_of_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/type_of_account_"
                    android:textSize="@dimen/font_16x" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_type_of_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/spinner_background" />

                <TextView
                    android:id="@+id/txt_view_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16x"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/customer_name_"
                    android:textSize="@dimen/font_16x" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/spinner_background" />

                <TextView
                    android:id="@+id/txt_view_opening_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16x"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/opening_date_"
                    android:textSize="@dimen/font_16x" />

                <EditText
                    android:id="@+id/ed_txt_opening_date"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/input_border"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/oxygen_regular"
                    android:inputType="date"
                    android:padding="@dimen/space_8x"
                    android:textSize="@dimen/font_16x"
                    app:drawableEndCompat="@drawable/ic_dob" />

                <TextView
                    android:id="@+id/txt_view_source_of_fund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16x"
                    android:fontFamily="@font/oxygen_bold"
                    android:text="@string/source_fund_"
                    android:textSize="@dimen/font_16x" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_source_of_fund"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_48x"
                    android:layout_marginTop="@dimen/space_8x"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_view_customer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16x"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/customer_info"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/font_20x"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/txt_view_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_5x"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/name"
                android:textColor="@color/customer_text"
                android:textSize="@dimen/font_20x"
                app:layout_constraintEnd_toStartOf="@+id/txt_view_father_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_customer_info" />

            <TextView
                android:id="@+id/txt_view_father_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_5x"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/father_name_"
                android:textColor="@color/customer_text"
                android:textSize="@dimen/font_20x"
                app:layout_constraintEnd_toStartOf="@+id/txt_view_mother_name"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_customer_info" />

            <TextView
                android:id="@+id/txt_view_mother_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_5x"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/mother_name_"
                android:textColor="@color/customer_text"
                android:textSize="@dimen/font_20x"
                app:layout_constraintEnd_toStartOf="@+id/txt_view_dob"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_father_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_customer_info" />

            <TextView
                android:id="@+id/txt_view_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_5x"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/date_of_birth_"
                android:textColor="@color/customer_text"
                android:textSize="@dimen/font_20x"
                app:layout_constraintEnd_toStartOf="@+id/txt_view_signatory"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_mother_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_customer_info" />

            <TextView
                android:id="@+id/txt_view_signatory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_5x"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/signatory"
                android:textColor="@color/customer_text"
                android:textSize="@dimen/font_20x"
                app:layout_constraintEnd_toStartOf="@id/txt_view_mandatory"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_dob"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_customer_info" />

            <TextView
                android:id="@+id/txt_view_mandatory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oxygen_bold"
                android:text="@string/mandatory"
                android:textColor="@color/customer_text"
                android:textSize="@dimen/font_20x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_view_signatory"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_customer_info" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_1x"
                android:layout_marginTop="@dimen/space_5x"
                android:background="@color/shimmer_background_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_view_father_name" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/space_8x"
                android:layout_marginBottom="@dimen/space_8x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16x"
                android:background="@drawable/button_border"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/oxygen_regular"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="@dimen/font_20x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>